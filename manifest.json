{
	"manifest_version": 2,
   
	"name": "PLATO DOWNLOADER",
	"description": "PLATO 강의 다운로더",
	"version": "1.3",
	"icons": {
        "16": "default.png",
        "48": "default.png",
        "128": "default.png"
    },

	"browser_action": {
        "default_popup": "popup.html"
    },
	
	"background": {
		"scripts": ["background.js", "lib/mux-mp4.js", "lib/download.js", "lib/getm3u8.js"]
	},

	"permissions": [
		"contextMenus"
	],

	"content_scripts": [
	    {
	      	"matches": ["https://plato.pusan.ac.kr/course/view.php?id=*"],
	      	"js": ["content.js"]
	    }, 
		{
			"matches": ["https://plato.pusan.ac.kr/mod/vod/view.php?id=*"],
			"js": ["vidPageContent.js"]
		}
  	]
  }